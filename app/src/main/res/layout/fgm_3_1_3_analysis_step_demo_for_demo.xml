<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    >

    <!--    btn_rtgl_green_yellow-->

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:columnCount="12"
        android:rowCount="1"
        android:gravity="center"
        android:layout_gravity="center_horizontal"  >

        <Switch
            android:id="@+id/switch_auto_als"
            android:onClick="switch_auto_als_"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="自動解析"
            android:textOff="ON"
            android:textOn="OFF"
            android:checked="true"
            android:showText="true"
            android:theme="@style/AppTheme"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_bg"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_gravity="fill"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="解析状況"
            android:textSize="15sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="1"
            android:textSize="15sp"
            android:background="@drawable/btn_rtgl_sky_blue"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_2"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="2"
            android:textSize="15sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_3"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="3"
            android:textSize="15sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_4"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="4"
            android:textSize="15sp"
            android:background="@drawable/btn_rtgl_green_yellow"
