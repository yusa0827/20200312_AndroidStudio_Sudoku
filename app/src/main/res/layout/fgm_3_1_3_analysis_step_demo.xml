<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    >

<!--    btn_rtgl_green_yellow-->

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:columnCount="11"
        android:rowCount="1"
        android:layout_gravity="center_horizontal"  >

        <Switch
            android:id="@+id/switch_auto_als"
            android:onClick="switch_auto_als_"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="自動解析"
            android:textOff="ON"
            android:textOn="OFF"
            android:checked="true"
            android:showText="true"
            android:theme="@style/AppTheme"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_bg"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_gravity="fill"/>


        <TextView
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:text="解析状況"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="1"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_sky_blue"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_2"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="2"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_3"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="3"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_4"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="4"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_5"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="5"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_6"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="6"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>
        <TextView
            android:id="@+id/fgm_tv_als_step_7"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="7"
            android:textSize="20sp"
            android:background="@drawable/btn_rtgl_green_yellow"
            android:gravity="center"
            app:layout_gravity="fill"/>

    </GridLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_gravity="center_horizontal"  >

        <Button
            android:id="@+id/button_move_to_analysis2_demo_demo2"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:onClick="btn_special_als"
            android:text="特別な解析を開始" />

        <Button
            android:id="@+id/button_move_to_analysis2_demo_demo3"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:onClick="btn_number_1_9_easy"
            android:text="1~9までの簡単な解析を開始" />




        <RelativeLayout
            android:id="@+id/fgm_of_fgm_btn_als_step_1"
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal" />

    </GridLayout>


    <TextView
        android:id="@+id/tv_als_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="解析結果　確定した数字があるか"
        android:textSize="15sp" />


</LinearLayout>