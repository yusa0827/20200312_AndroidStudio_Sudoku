<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/textView_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="数独　デモ　解析結果"
        android:textSize="15sp" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="225dp"
        android:layout_gravity="center"

        android:columnCount="2"
        android:rowCount="1">

        <RelativeLayout
            android:id="@+id/fragment_button_sudoku_demo_rlt_map_demo"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <GridLayout
            android:layout_width="120dp"
            android:layout_height="225dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="1"
            android:rowCount="4">

            <Space
                android:layout_width="120dp"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_sudoku_percent"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="数独の完成度\n"
                android:textSize="15sp" />

            <Space
                android:layout_width="120dp"
                android:layout_height="10dp" />

            <RelativeLayout
                android:id="@+id/fgm_sudoku_input_table_3_3"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"/>

        </GridLayout>

    </GridLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:id="@+id/fgm_btn_als_step_demo"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal">

    </RelativeLayout>

    <Button
        android:id="@+id/button_to_sudoku_home_from_demo_"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:onClick="return_home"
        android:text="ホームに戻る"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432" />

</LinearLayout>